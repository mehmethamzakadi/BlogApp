            <img src="images/logo.svg" alt="BlogApp" class="brand-logo" />
            <h3>BlogApp</h3>
        </div>
        <NavMenu />
    </RadzenSidebar>

    <RadzenHeader>
        <div class="topbar">
            <RadzenSidebarToggle Click="ToggleSidebar" Icon="menu" ButtonStyle="ButtonStyle.Light" />
            <h1>Blog YÃ¶netimi</h1>
        </div>
    </RadzenHeader>

    <RadzenBody>
        <RadzenContent ContainerStyle="padding: 1.5rem;">
