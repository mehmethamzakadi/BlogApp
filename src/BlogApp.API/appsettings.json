{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "TokenOptions": {
    "AccessTokenExpiration": 60,
    "SecurityKey": "!cz2Hx3CU4v5B*_*!z2xBiX3C4v5B*_*"
  },

  "EmailOptions": {
    "Host": "smtp.gmail.com",
    "Port": 587
  },

  "RabbitMQOptions": {
    "RetryLimit": 10
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      },
      {
        "Endpoint": "POST:/api/auth/*",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/post",
        "Period": "1m",
        "Limit": 10
      }
    ]
  },

  "IpRateLimitPolicies": {
    "IpRules": []
  }
}